<h1>All event</h1>
<table id="events">
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Location</th>
    <th>Host</th>
    <th>Action/Status</th>
  <tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td><%= event.location %></td>
        <td>host data</td>
        <td>status data</td>
      </tr>
  <% end %>
</table>
<h1>Add event</h1>

<% if flash[:event] %>
    <% @event=Event.new(flash[:event]) %>
<% end %>
<%= form_for @event do |e| %>
    <%= render 'shared/errors' %>
    <fieldset>
      <li class="required">
        <%= e.label :name %>
        <%= e.text_field :name %>
      </li>
      <li class="required">
        <%= e.label :date %>
        <%= e.date_field :date %>
      </li>
      <li class="required">
        <%= e.label :location %>
        <%= e.text_field :location %>
      </li>
      <p>
        <%= e.submit %>
      </p>
    </fieldset>
<% end %>
